// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String?
  role      Role     @default(CUSTOMER) // Admin vs Customer
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Product {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  price       Float
  brand       String      // e.g. "Nike", "Adidas"
  gender      Gender      @default(MEN)
  productType ProductType @default(SHOES)
  images      String[]    // Array of Cloudinary URLs
  
  // Inventory Management
  isFeatured  Boolean     @default(false) // For the Hero Section
  isArchived  Boolean     @default(false) // Soft delete
  
  category    Category    @relation(fields: [categoryId], references: [id])
  categoryId  String      @db.ObjectId
  
  sizes       Size[]      // Relation to stock per size
  reviews     Review[]
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  OrderItem   OrderItem[]
}

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  rating    Int      // 1-5
  comment   String
  userName  String   // or link to User if we have auth
  createdAt DateTime @default(now())

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String   @db.ObjectId
}

model Size {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  value     String   // e.g. "US 10", "EU 42"
  quantity  Int      // Stock level for this specific size
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String   @db.ObjectId
}

model Category {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String    // e.g. "Jordans", "Yeezys", "Running"
  products Product[]
}

model Order {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  isPaid        Boolean     @default(false)
  phone         String      @default("")
  address       String      @default("")
  customerName String      @default("")
  customerEmail String      @default("")
  deliveryMethod String     @default("standard") // standard, express, pickup, us
  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  user      User?       @relation(fields: [userId], references: [id])
  userId    String?     @db.ObjectId // Optional: allow guest checkout
  
  orderItems OrderItem[]
}

model OrderItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])
  productId String  @db.ObjectId
  quantity  Int     @default(1)
  size      String  @default("")
}

enum Role {
  ADMIN
  CUSTOMER
}

enum Gender {
  MEN
  WOMEN
  KIDS
  UNISEX
}

enum ProductType {
  SHOES
  CLOTHING
  ACCESSORIES
}

model Preorder {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  customerName String
  phoneNumber  String
  instagram    String?  // Optional
  productName  String
  productImage String
  size         String
  status       String   @default("PENDING") // PENDING, CONTACTED, CLOSED
  createdAt    DateTime @default(now())
}